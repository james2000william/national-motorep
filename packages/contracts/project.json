{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/contracts/src",
  "projectType": "library",
  "targets": {
    "build-lib": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/contracts",
        "main": "packages/contracts/src/index.ts",
        "tsConfig": "packages/contracts/tsconfig.lib.json",
        "assets": [
          "packages/contracts/*.md",
          "packages/contracts/src/**/*.json"
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "typechain"
        }
      ]
    },

    "typechain": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -Rf packages/contracts/src/types && yarn typechain --target=ethers-v5 --out-dir=packages/contracts/src/types packages/contracts/src/**/*.json"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "postTargets": [
          {
            "project": "self",
            "target": "github-release"
          },
          {
            "project": "self",
            "target": "npm-publish"
          }
        ]
      }
    },
    "github-release": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm-publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}

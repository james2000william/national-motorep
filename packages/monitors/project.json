{
  "name": "monitors",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/monitors/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/monitors",
        "main": "packages/monitors/src/index.ts",
        "tsConfig": "packages/monitors/tsconfig.lib.json",
        "assets": ["packages/monitors/*.md"],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/monitors/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/monitors/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
